<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    app:cardCornerRadius="20sp">

    <RelativeLayout
        android:id="@+id/pendingCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6EAD882">

        <TextView
            android:id="@+id/pendingUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:text="USERNAME"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pendingVenueRentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_toStartOf="@id/pendingVenueRent"
            android:text="Rent:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pendingVenueRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:text="Rent"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/buttonLayer"
            android:layout_below="@id/pendingUsername"
            android:layout_marginBottom="5sp"
            android:scrollbarStyle="outsideOverlay"
            android:overScrollMode="never">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="5sp">

                <TextView
                    android:id="@+id/pendingVenuename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2sp"
                    android:layout_marginStart="10sp"
                    android:text="Venue Title"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pendingLandmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingVenuename"
                    android:layout_marginStart="10sp"
                    android:layout_marginVertical="2sp"
                    android:text="LANDMARK"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingLandmark"
                    android:layout_marginStart="10sp"
                    android:layout_marginVertical="2sp"
                    android:text="CITY"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingLandmark"
                    android:layout_marginVertical="2sp"
                    android:layout_marginStart="10sp"
                    android:layout_toEndOf="@id/pendingCity"
                    android:text="STATE"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingStartDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingCity"
                    android:layout_marginVertical="2sp"
                    android:layout_marginStart="10sp"
                    android:text="From"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingCity"
                    android:layout_marginStart="10sp"
                    android:layout_marginVertical="2sp"
                    android:layout_toEndOf="@id/pendingStartDateText"
                    android:text="START DATE"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingEndDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingStartDate"
                    android:layout_marginStart="10sp"
                    android:layout_marginVertical="2sp"
                    android:text="To"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingStartDate"
                    android:layout_marginStart="10sp"
                    android:layout_marginVertical="2sp"
                    android:layout_toEndOf="@id/pendingEndDateText"
                    android:text="END DATE"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingUserMailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingDurationText"
                    android:layout_marginStart="10sp"
                    android:layout_marginVertical="2sp"
                    android:text="Client Contact"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingUserMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingDurationText"
                    android:layout_marginStart="10sp"
                    android:layout_marginVertical="2sp"
                    android:layout_toEndOf="@id/pendingUserMailText"
                    android:text="USER MAIL"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingDurationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingEndDate"
                    android:layout_marginVertical="2sp"
                    android:layout_marginStart="10sp"
                    android:text="Duration"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pendingDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pendingEndDate"
                    android:layout_marginVertical="2sp"
                    android:layout_marginStart="10sp"
                    android:layout_toEndOf="@id/pendingDurationText"
                    android:text="Duration"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/buttonLayer"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acceptButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8sp"
                android:layout_weight="1"
                android:background="@drawable/round_corners"
                android:backgroundTint="@color/lime"
                android:text="ACCEPT" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rejectButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8sp"
                android:layout_weight="1"
                android:background="@drawable/round_corners"
                android:backgroundTint="@color/colorError"
                android:text="REJECT" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
