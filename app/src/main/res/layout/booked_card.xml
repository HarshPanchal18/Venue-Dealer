<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    app:cardCornerRadius="10sp">

    <RelativeLayout
        android:id="@+id/bookingCard"
        android:background="#D282BCEF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bookingUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:text="USERNAME"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/venueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookingUsername"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:textColor="@color/black"
            android:text="VENUE TITLE"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookingLandmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/venueTitle"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="10sp"
            android:text="LANDMARK"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookingCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/venueTitle"
            android:layout_marginTop="2sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@id/bookingLandmark"
            android:textColor="@color/black"
            android:text="CITY" />

        <TextView
            android:id="@+id/bookingState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="2sp"
            android:layout_marginStart="10sp"
            android:layout_below="@id/venueTitle"
            android:layout_toEndOf="@id/bookingCity"
            android:text="STATE" />

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookingLandmark"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:text="FROM"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookingStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookingLandmark"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="10sp"
            android:layout_toEndOf="@id/from"
            android:text="START DATE" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookingStartDate"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:text="TO"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookingEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookingStartDate"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="10sp"
            android:layout_toEndOf="@id/to"
            android:text="END DATE"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookingDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookingEndDate"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="10sp"
            android:text="DURATION"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookingUserMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookingDuration"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="10sp"
            android:text="USER MAIL"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/activeStatusCard"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/lime"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            app:cardCornerRadius="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/activeStatus"
                android:text="ACTIVE"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/upcomingStatusCard"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/colorWarning"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            app:cardCornerRadius="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/upcomingStatus"
                android:text="UPCOMING"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBookingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5sp"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/white"
            android:text="Cancel" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
